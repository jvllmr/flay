  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug file collector",
      "type": "debugpy",
      "request": "launch",
      "module": "flay",
      "args": ["debug", "bundle", "collector", "flay"],
      "env": { "FLAY_DEBUG_APP": "1" }
    },
    {
      "name": "Debug bundle step",
      "type": "debugpy",
      "request": "launch",
      "module": "flay",
      "args": ["debug", "bundle", "bundle_package", "flay"],
      "env": { "FLAY_DEBUG_APP": "1" }
    },
    {
      "name": "Debug bundle+treeshake",
      "type": "debugpy",
      "request": "launch",
      "module": "flay",
      "args": ["debug", "treeshake", "bundle_then_treeshake_package", "flay"],
      "env": { "FLAY_DEBUG_APP": "1" }
    }
  ]
}
